  "version": "0.1.1",
  "author": "Markus Weiss (https://www.mecomedia.com)",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "build": "NODE_ENV=production && vue-cli-service build --mode production --target lib --name vue-audio-okapi src/components/OkapiWidget.vue"
  },
  "keywords": [
    "vue",
    "audio",
    "mp3",
    "messaging",
    "microphone",
    "recording"
  ],
  "dependencies": {
    "convert-time-to-mmss": "^1.0.1",
    "core-js": "3.19.1",
    "lib-wav-audio-recorder": "^1.0.1",
    "lamejs": "github:zhuker/lamejs"
  },
  "peerDependencies": {
    "vue": "^3.2.39"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/eslint-parser": "^7.18.9",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.7.1",
    "microbundle": "^0.15.1",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "lamejs": "^1.2.1"
  },
  "main": "dist/vue-audio-okapi.common.js",
  "browser": "dist/vue-audio-okapi.umd.min.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mecomedia/vue-audio-okapi.git"
  },
  "bugs": {
    "url": "https://github.com/mecomedia/vue-audio-okapi/issues"
  },
  "homepage": "https://github.com/mecomedia/vue-audio-okapi",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential"
    ],
    "rules": {
      "quotes": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "directories": {
    "doc": "docs"
  }
